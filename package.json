{
  "scripts": {
    "check-format": "purs-tidy check \"src/**/*.purs\"",
    "format": "purs-tidy format-in-place \"src/**/*.purs\"",
    "prebuild": "npm run check-format",
    "build": "spago build",
    "pretest": "npm run build",
    "test": "echo \"WARNING: No tests available.\" && exit 1",
    "prebundle": "npm run build",
    "bundle": "esbuild ./output/Main/index.js --bundle --platform=browser --format=esm --external:@emurgo/cardano-serialization-lib-browser --outfile=bundle/purs.js",
    "predist": "npm run bundle",
    "dist": "webpack --mode=production --node-env=production",
    "preserve": "npm run dist",
    "serve": "webpack serve",
    "clean": "rm -r output/Frontend.* output/Main/ bundle/ dist/ 2> /dev/null"
  },
  "devDependencies": {
    "html-webpack-plugin": "^5.5.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "@emurgo/cardano-serialization-lib-browser": "^11.2.1"
  }
}
